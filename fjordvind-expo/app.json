{
  "expo": {
    "name": "FjordVind",
    "slug": "fjordvind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "no.fjordvind.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Appen bruker stemmegjenkjenning for rask registrering av tall",
        "NSMicrophoneUsageDescription": "Appen trenger mikrofon for stemmegjenkjenning"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "no.fjordvind.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Appen trenger mikrofon for stemmegjenkjenning",
          "speechRecognitionPermission": "Appen bruker stemmegjenkjenning for rask registrering"
        }
      ]
    ]
  }
}
