# ===========================================
# FjordVind Lusevokteren API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Server Configuration
PORT=3000
NODE_ENV=development  # Use 'production' for production

# ===========================================
# SECURITY (REQUIRED for production)
# ===========================================

# JWT Secret - Generate with: npm run generate-secret
# MUST be changed in production!
JWT_SECRET=CHANGE_THIS_generate_a_random_64_byte_hex_string
JWT_EXPIRES_IN=7d

# ===========================================
# DATABASE
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lusevokteren
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_use_a_strong_password

# Alternative: Full connection string (overrides individual settings)
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ===========================================
# APP URLs
# ===========================================
# Frontend URL (for email links, CORS, redirects)
APP_URL=http://localhost:5173

# API URL (for internal references)
API_URL=http://localhost:3000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Provider: 'sendgrid', 'smtp', or 'console' (default for dev)
EMAIL_PROVIDER=console

# From address for emails
EMAIL_FROM=noreply@fjordvind.no
EMAIL_FROM_NAME=FjordVind Lusevokteren

# --- SendGrid (recommended for production) ---
# Sign up at: https://sendgrid.com/
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx

# --- SMTP (alternative) ---
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-username
# SMTP_PASS=your-password

# ===========================================
# EXTERNAL APIS
# ===========================================

# BarentsWatch API (https://www.barentswatch.no/minside/mine-apper)
BARENTSWATCH_CLIENT_ID=your_email:your_app_name
BARENTSWATCH_CLIENT_SECRET=your_client_secret

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Sentry (https://sentry.io) - Error tracking
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ===========================================
# RATE LIMITING (optional overrides)
# ===========================================
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Twilio SMS (for SMS notifications)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+47xxxxxxxx

# Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379
